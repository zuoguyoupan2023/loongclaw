# LoongClaw 环境配置文件示例
# 复制此文件为 .env 并填入实际值

# ============================================
# LLM API 配置
# ============================================

# GLM-4 API (智谱 AI)
GLM_API_KEY=your_glm_api_key_here
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions
GLM_MODEL=glm-4-plus

# ============================================
# 服务器配置
# ============================================

# Web 服务器
PORT=3000
HOST=localhost

# WebSocket
WS_PORT=3001

# ============================================
# 存储配置
# ============================================

# 记忆存储目录
MEMORY_DIR=./memory

# 会话存储目录
SESSION_DIR=./sessions

# 工作空间目录
WORKSPACE_DIR=./workspace

# ============================================
# 安全配置
# ============================================

# 允许的文件访问路径（逗号分隔）
ALLOWED_PATHS=./workspace,./memory,./sessions

# Shell 执行超时（毫秒）
SHELL_TIMEOUT=30000

# Web 请求超时（毫秒）
WEB_TIMEOUT=10000

# ============================================
# 日志配置
# ============================================

# 日志级别 (debug|info|warn|error)
LOG_LEVEL=info

# 日志文件路径
LOG_FILE=./logs/loongclaw.log

# ============================================
# 开发配置
# ============================================

# 开发模式 (true|false)
DEV_MODE=true

# 热重载 (true|false)
HOT_RELOAD=true
